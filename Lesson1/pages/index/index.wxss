/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100rpx;
}
.user-button{
  margin-top: 10rpx;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #4ed;
  background-color: #aeaeae;
  border: 1rpx solid #000;
}
.link-show{
  margin-top: 20rpx;
  width: 500rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #aaa;
  text-align: center;
  border-radius: 10rpx;
  border: 1rpx solid #4ed;

}
