/**index.wxss**/
.image-item{
   width: 100%;
   height: 300rpx;
}
.room-list{
   display: flex;
   flex-wrap: wrap;
   justify-content: space-around;
   padding: 0 10rpx;
   margin-top: 30rpx;
   
}
.room-item{
   display: inline-flex;
   flex-direction: column;
   flex-shrink: 0;
   width: 350rpx;
   position: relative;
}
.cover-url{
   width: 100%;
}
.room-info{
   position: absolute;
   bottom: 0rpx;
   color: #fff;
   font-size: 28rpx;
   padding: 10rpx;
   background: linear-gradient(to bottom,rgba(0,0,0,0),rgba(0,0,0,0.3));
   width: 100%;
}
.s-address{
   display: block;
   color: #aaa;
}