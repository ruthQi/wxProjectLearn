/* pages/room/room.wxss */
page, .room-container{
   width: 100%;
   height: 100%;
   background-color: #ccc;
}
.room-video{
   width: 100%;
   height: 400rpx;
}
.room-chat{
   position: fixed;
   bottom: 0px;
   left: 0px;
   border: solid 1px #ccc;
   max-height: 400rpx;
   width: 600rpx;
   z-index: 10;
   color: #fff;
   font-size: 28rpx;
}
.chat-message{
   height: 300rpx;
}
.input-container{
   
   width: 600rpx;
   display: flex;
   flex-direction: row;
   
}
.chat-item{
   height: 40rpx;
   line-height: 40rpx;
   padding: 5rpx 10rpx;
}
.inpur-wrapper{
   width: 500rpx;
   border: 1px solid #fff;
   background-color: rgba(255,255,255,0.3);
   border-radius: 30rpx;
}
.s-input{
   height: 60rpx;
   line-height: 60rpx;
   margin: 0px 30rpx;
   font-size: 28rpx;
   color: #fff;
   width: 400rpx;
   
   
}
.sendBtn{
   width: 150rpx;
   text-align: center;
   height: 60rpx;
   line-height: 60rpx;
   background-color: skyblue;
   color: #fff;
   font-size: 28rpx;
}
.input-placeholder{
   color: #fff;
   font-size: 28rpx;
   text-align: center;
}